    <!-- ======= Services Section ======= -->
    <section id="services" class="services section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Services</h2>
            </div>
            <!-- icons section starts -->
            <section class="icons-container">
                <div class="icons">
                    <img src="img/icon-1.png" alt="" />
                    <div class="info">
                        <h3>Reasonable delivery fee</h3>
                        <span>In Cantho City</span>
                    </div>
                </div>
                <div class="icons">
                    <img src="img/icon-2.png" alt="" />
                    <div class="info">
                        <h3>10 days returns</h3>
                        <span>Moneyback guarantee</span>
                    </div>
                </div>
                <div class="icons">
                    <img src="img/icon-3.png" alt="" />
                    <div class="info">
                        <h3>Offer &amp; Gifts</h3>
                        <span>More than 5 orders in 1 month</span>
                    </div>
                </div>
            </section>
            <!-- icons section ends -->

        </div>
    </section><!-- End Services Section -->

    <section>
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Top Brands</h2>
            </div>

            <div class="row">
                {{#each categories }}
                <div class="col-12 col-sm-6 col-md-6 col-lg-3 py-5 d-flex align-items-center justify-content-center">
                    <a href="/shop?cid={{ this.id }}&page=1">
                        <img class="img-fluid" src="/categories/{{ this.image }}" alt="{{ this.name }}" />
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <section class="section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Best Selling</h2>
            </div>

            <div class="row">
                {{#each products }}
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img class="mx-auto" src="/products/{{ this.image }}" style="border: none;" width="100%"
                            height="100%" />
                        <div class="card-body text-center mx-auto">
                            <h5 class="card-title font-weight-bold">{{ this.name }}</h5>
                            <div class="d-flex justify-content-center align-items-end">
                                {{#ifCond this.price '<' this.old_price}} <del>${{ this.old_price }}</del>
                                    {{/ifCond}}
                                    <p class="card-text ml-2"><b>${{this.price}}</b></p>
                            </div>
                        </div>
                        <div class="card-body text-center mx-auto">
                            <a href="/view-detail/{{ this.id }}"
                                class="btn details px-auto text-dark font-weight-bold">view
                                details</a><br />
                            <form action="/cart/add" method="POST" class="mb-2">
                                <input type="hidden" name="quantity" value="1">
                                <input type="hidden" name="proid" value="{{ this.id }}" />
                                <input type="submit" name="addcart" class="btn cart px-auto text-light"
                                    value="ADD TO CART" />
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</main>

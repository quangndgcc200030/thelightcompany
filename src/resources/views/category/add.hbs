<script>
    function formValid() {
        var format = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]+/;
        f = document.formAddcategory
        if (f.name.value == "" || f.description.value == "") {
            alert("Enter fileds with marks(*), please");
            return false;
        }
        if (format.test(f.name.value)) {
            alert("Category name can't contain special character, please enter again");
            f.name.focus();
            return false;
        }
        if (format.test(f.description.value)) {
            alert("Category description can't contain special character, please enter again");
            f.txtCatDesc.focus();
            return false;
        }
        if (f.image.value == "") {
            alert("You must select your picture");
            return false;
        }
        return true;
    }
</script>

<div class="m-5">
    <h1 class="text-center mb-4">Adding Category</h2>
        <form id="formAddcategory" name="formAddcategory" method="POST" action="/category/add/store"
            enctype="multipart/form-data" onsubmit="return formValid()">

            <div class="form-group">
                <label class="form-label font-weight-bold" for="txtCatName">Category Name (*)</label>
                <input type="text" name="name" id="txtCatName" class="form-control" placeholder="" />
            </div>

            <div class="form-group">
                <label class="form-label font-weight-bold" for="txtCatDesc">Category Description (*)</label>
                <input type="text" name="description" id="txtCatDesc" class="form-control" placeholder="" />
            </div>

            <div class="form-group">
                <label for="catImage" class="form-label font-weight-bold">Category Image (*)</label>
                <input type="file" name="image" id="catImage" class="form-control-file" />
            </div>

            <div class="form-group text-center">
                <input type="submit" class="btn btn-info" name="btnAdd" value="Add new" />
                <input type="button" class="btn btn-info" name="btnIgnore" value="Ignore"
                    onclick="window.location='/category/add'" />
            </div>
        </form>
</div>
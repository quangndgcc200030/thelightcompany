<link rel="stylesheet" href="/css/viewdetail.css">
{{#if success }}
<div class="alert alert-success text-center">{{ success }}</div>
<meta http-equiv="refresh" content="1; url='/view-detail/{{ product.id }}'" />
{{/if}}
{{#if error }}
<div class="alert alert-danger text-center">{{ error }}</div>
{{/if}}
<div class="card">
    <div class="card-body">
        <h3 class="card-title">{{ product.name }}</h3>
        <h6 class="card-subtitle">{{ product.small_desc }}</h6>
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="white-box text-center" style="margin-top: 1em">
                    <img src="/products/{{ product.image }}" class="img-responsive" height="60%" width="60%">
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12">
                <h4 class="box-title mt-5">Product description</h4>
                <p>{{ product.detail_desc }}. Lorem Ipsum available,but the majority have suffered alteration in some
                    form,by
                    injected
                    humour,or randomised words which don't look even slightly believable.but the majority have
                    suffered alteration in some form,by injected humour</p>
                {{#ifCond product.quantity '>' 0}}
                <h4 class="mt-md-4">
                    Remaining products:
                    {{ product.quantity }}
                </h4>
                <div class="my-4 align-items-center">
                    <h2 class="mt-5">
                        ${{ product.price }}
                        {{#ifCond product.sale '!=' 0}}
                        <small class="text-success">({{ product.sale }}%off)</small>
                        {{/ifCond}}
                    </h2>
                </div>
                <form action="/cart/add" method="POST" class="mb-2">
                    <div class="row d-flex">
                        <input type="number" name="quantity" class="col-md-2" value="1" min="1"
                            max="{{ product.quantity }}" />
                        <input type="submit" name="addcart"
                            class="btn btn-dark btn-rounded mx-md-2 my-2 my-md-0 col-md-3" value="Add to cart" />
                        <input type="submit" name="btnBuynow" formaction="/checkout/buy?_method=GET"
                            class="btn btn-primary btn-rounded me-md-2 my-md-0 mb-2 col-md-3" value="Buy Now" />
                        <input type="hidden" name="proid" value="{{ product.id }}" />
                    </div>
                </form>
                {{else}}
                <h4 class="mt-md-4">Out of stock</h4>
                {{/ifCond}}
                {{!-- <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title=""
                    data-original-title="Add to cart">
                    <i class="fa fa-shopping-cart"></i>
                </button>
                <button class="btn btn-primary btn-rounded">Buy Now</button> --}}
                <h3 class="box-title mt-5">Key Highlights</h3>
                <ul class="list-unstyled">
                    <li><i class="fa fa-check text-success mr-2"></i>Sturdy structure</li>
                    <li><i class="fa fa-check text-success mr-2"></i>Designed to foster easy portability</li>
                    <li><i class="fa fa-check text-success mr-2"></i>Perfect toy for your child</li>
                </ul>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3 class="box-title mt-5">General Info</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-product">
                        <tbody>
                            <tr>
                                <td width="40%">Cateogy</td>
                                <td>{{ product.cat_name }}</td>
                            </tr>
                            <tr>
                                <td width="40%">Supplier</td>
                                <td>{{ product.sup_name }}</td>
                            </tr>
                            <tr>
                                <td width="40%">Shop</td>
                                <td>{{ product.shop_name }}</td>
                            </tr>
                            <tr>
                                <td width="40%">Delivery Condition</td>
                                <td>Knock Down</td>
                            </tr>
                            <tr>
                                <td width="40%">Type</td>
                                <td>Teenager Toy</td>
                            </tr>
                            <tr>
                                <td width="40%">Style</td>
                                <td>Modern</td>
                            </tr>
                            <tr>
                                <td width="40%">Upholstery Included</td>
                                <td>Yes</td>
                            </tr>
                            <tr>
                                <td width="40%">Upholstery Type</td>
                                <td>Cushion</td>
                            </tr>
                            <tr>
                                <td width="40%">Suitable For</td>
                                {{#ifCond product.for_age '==' '1315'}}
                                <td>{{ product.for_gender}}, 13 - 15</td>
                                {{/ifCond}}
                                {{#ifCond product.for_age '==' '1619'}}
                                <td>{{ product.for_gender}}, 16 - 19</td>
                                {{/ifCond}}
                                {{#ifCond product.for_age '==' '1319'}}
                                <td>{{ product.for_gender}}, 13 - 19</td>
                                {{/ifCond}}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>